extends layout

block content
	h1 Register
	p Please register using the form below or #[a(href='/users/login') login] if you already have an account
	ul.errors
		if errors
			each error, i in errors
				li.alert.alert-danger #{error.msg}
	form(method='post', action='/users/register', enctype='multipart/form-data')
		.form-group
			label Name
			input.form-control(name='name', type='text', placeholder='please enter your name')
		.form-group
			label Email
			input.form-control(name='email', type='email', placeholder='please enter your email')
		.form-group
			label User Name
			input.form-control(name='username', type='text', placeholder='please create a username')
		.form-group
			label Password
			input.form-control(name='password', type='password', placeholder='enter password')
		.form-group
			label Confirm Password
			input.form-control(name='password2', type='password', placeholder='confirm password')
		.form-group
			label Profile Image
			input.form-control(name='profileimage', type='file')
		input.btn.btn-large(name='submit', type='submit', value='Register')

